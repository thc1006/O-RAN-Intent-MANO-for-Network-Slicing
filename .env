# O-RAN Intent MANO Environment Configuration
# Copy this file to .env and update with your values
# IMPORTANT: Never commit .env file with actual values!

# ==============================================================================
# Cluster Configuration
# ==============================================================================
CLUSTER_NAME=oran-mano-local
CLUSTER_TYPE=kind  # Options: kind, k3s
KUBECONFIG_PATH=${HOME}/.kube/config

# ==============================================================================
# Network Configuration
# DO NOT HARDCODE IP ADDRESSES - These will be discovered dynamically
# ==============================================================================
SERVICE_SUBNET=""  # Will be auto-discovered from cluster
POD_SUBNET=""      # Will be auto-discovered from cluster
OVERLAY_NETWORK="" # Will be configured by Kube-OVN

# ==============================================================================
# O-RAN Configuration
# These endpoints will be set dynamically during deployment
# ==============================================================================
O2IMS_ENDPOINT=""  # O2 Infrastructure Management Service endpoint
O2DMS_ENDPOINT=""  # O2 Deployment Management Service endpoint
SMO_ENDPOINT=""    # Service Management and Orchestration endpoint

# ==============================================================================
# GitOps Configuration
# ==============================================================================
GIT_REPO_URL=""    # Your GitOps repository (e.g., https://github.com/user/repo)
GIT_BRANCH=main
GIT_USERNAME=""    # Your Git username
GIT_TOKEN=""       # Use environment variable or secret manager - NEVER hardcode!

# ==============================================================================
# Monitoring Configuration
# ==============================================================================
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
METRICS_RETENTION_DAYS=7
METRICS_SCRAPE_INTERVAL=30s
ALERT_MANAGER_ENABLED=false

# ==============================================================================
# Development Settings
# ==============================================================================
DEBUG_MODE=false
LOG_LEVEL=info  # Options: debug, info, warn, error
ENABLE_TRACING=false
ENABLE_PROFILING=false
MOCK_MODE=false  # Use mock O-RAN components for testing

# ==============================================================================
# Resource Limits
# ==============================================================================
MAX_SLICES=100
MAX_EDGE_SITES=50
MAX_REGIONAL_SITES=5
MAX_CENTRAL_SITES=1
MAX_NF_PER_SLICE=20
MAX_CONCURRENT_DEPLOYMENTS=10

# ==============================================================================
# Performance Targets (from thesis requirements)
# ==============================================================================
TARGET_DEPLOYMENT_TIME_MINUTES=10
TARGET_THROUGHPUT_HIGH_MBPS=4.57
TARGET_THROUGHPUT_MED_MBPS=2.77
TARGET_THROUGHPUT_LOW_MBPS=0.93
TARGET_RTT_HIGH_MS=16.1
TARGET_RTT_MED_MS=15.7
TARGET_RTT_LOW_MS=6.3
TARGET_PACKET_LOSS_PERCENT=0.1
TARGET_JITTER_MS=2.0

# ==============================================================================
# Tool Versions (for reproducibility)
# ==============================================================================
KIND_VERSION=v0.20.0
K3S_VERSION=v1.28.5+k3s1
KUBECTL_VERSION=v1.28.5
KPT_VERSION=v1.0.0-beta.49
NEPHIO_VERSION=v2.0.0
PORCH_VERSION=v1.0.0
KUBE_OVN_VERSION=v1.12.0

# ==============================================================================
# Python Configuration
# ==============================================================================
PYTHON_VERSION=3.11
PYTEST_OPTS="--verbose --cov"
BLACK_LINE_LENGTH=120
MYPY_STRICT=false

# ==============================================================================
# Go Configuration
# ==============================================================================
GO_VERSION=1.21
GO_PRIVATE=""  # Private module paths
GOPROXY=https://proxy.golang.org,direct
GOSUMDB=sum.golang.org

# ==============================================================================
# Container Registry
# ==============================================================================
CONTAINER_REGISTRY=""  # e.g., ghcr.io/username
CONTAINER_REGISTRY_USERNAME=""
CONTAINER_REGISTRY_PASSWORD=""  # Use secret manager!
IMAGE_PULL_POLICY=IfNotPresent

# ==============================================================================
# Experiment Configuration
# ==============================================================================
EXPERIMENT_RUNS=3
EXPERIMENT_DURATION_SECONDS=300
IPERF_TEST_DURATION=60
PING_COUNT=100
RESULTS_OUTPUT_DIR=./experiments/results

# ==============================================================================
# Security Configuration
# ==============================================================================
ENABLE_RBAC=true
ENABLE_NETWORK_POLICIES=true
ENABLE_POD_SECURITY_POLICIES=false
TLS_ENABLED=true
MTLS_ENABLED=false

# ==============================================================================
# API Configuration
# ==============================================================================
API_PORT=8080
API_HOST=0.0.0.0
API_PREFIX=/api/v1
API_TIMEOUT_SECONDS=30
API_RATE_LIMIT=100  # requests per minute

# ==============================================================================
# Database Configuration (if needed)
# ==============================================================================
DB_TYPE=""  # Options: postgres, mysql, sqlite
DB_HOST=""
DB_PORT=""
DB_NAME=""
DB_USER=""
DB_PASSWORD=""  # Use secret manager!
DB_SSL_MODE=require

# ==============================================================================
# Feature Flags
# ==============================================================================
FEATURE_NLP_INTENT=true
FEATURE_AUTO_SCALING=false
FEATURE_MULTI_TENANCY=false
FEATURE_ADVANCED_PLACEMENT=true
FEATURE_REAL_TIME_MONITORING=true

# ==============================================================================
# Notification Configuration
# ==============================================================================
SLACK_WEBHOOK_URL=""  # For deployment notifications
EMAIL_NOTIFICATIONS_ENABLED=false
EMAIL_SMTP_HOST=""
EMAIL_SMTP_PORT=""
EMAIL_FROM=""
EMAIL_TO=""